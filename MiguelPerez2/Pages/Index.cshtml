@page
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <p class="text-start badge bg-primary text-wrap">@User.Identity.Name</p>
    }
    else
    {
        <h4 class="display-4">Welcome</h4>
    }

    <h5>Electronics</h5>
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Quantity</th>
        </tr>
    </thead>
    <tbody>
        @for (var i=0; i<Model.Model.Count;i++ )
        {
            <tr>
                <td scope="row">@i</td>
                <td scope="row">@Html.DisplayFor(modelItem => Model.Model[i].Name)</td>
                <td scope="row">@Html.DisplayFor(modelItem => Model.Model[i].Description)</td>
                <td scope="row">@Html.DisplayFor(modelItem => Model.Model[i].Quantity)</td>
            </tr>
        }
    </tbody>
</table>
</div>
